---
import "@fontsource/m-plus-rounded-1c";
export interface Props {
	text: string;
    link?: URL;
}

const { text, link} = Astro.props;
---
<button class="
bg-gradient-to-r from-green-600 to-teal-700
text-stone-800
font-bold
hover:underline
decoration-orange-400
decoration-4 
active:ring-2  
ring-orange-400 
py-1 px-4 rounded
transition ease-in-out delay-150  hover:scale-125 duration-150
">
    {text}
</button>