<script>
fadeIn()
function fadeIn(){
	let mainContent = document.getElementById('mainContent');
	// @ts-ignore <-- ignoring possible null reference
	mainContent.classList.remove('opacity-0'); 
	// @ts-ignore <-- ignoring possible null reference
